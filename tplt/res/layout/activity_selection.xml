<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_exam"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/txt_selection_exam_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TOPIK Listening - 41회"
            android:textColor="@color/BLACK"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_selection_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="onClick"
            android:text="PRACTICE" />

        <Button
            android:id="@+id/btn_selection_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="TAKE AN EXAM" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_sample_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txt_selection_sample_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TOPIK Listening - 41회"
            android:textColor="@color/BLACK"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_selection_sample_beginner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="onClick"
            android:text="BEGINNER" />

        <Button
            android:id="@+id/btn_selection_sample_intermediate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="INTERMEDIATE" />

        <Button
            android:id="@+id/btn_selection_sample_advanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="ADVANCED" />
    </LinearLayout>

</LinearLayout>